#!/bin/bash

RANGE=$1
STDIN=$(</dev/stdin)

if [ -z $RANGE ]; then
    RANGE=0
fi

START=$RANGE
END=1
if [[ $RANGE == *"-"* ]]; then
    START=`echo $RANGE | awk -F "-" '{ print $1 }'`;
    END_VALUE=`echo $RANGE | awk -F "-" '{ print $2 }'`;
    END=$((END_VALUE-START+1))
fi

echo "${STDIN:$START:$END}"

