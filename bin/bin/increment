#!/usr/bin/perl -w

use strict;

use Getopt::Long;

my $a_help;
my $a_print;

my $KEY = "";

sub help() {
    print STDOUT <<'HELP';

increment

USAGE:
  >> increment [key] [options]

Options:
  --print   (-p) print value

EXAMPLES:
  >> increment key    # increment the "key" value
  >> increment key -p # print value
  >> increment key -d # remove key

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

MAIN: {
    GetOptions(
        'help' => \$a_help,
        'print' => \$a_print,
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg = getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    if (! defined $firstArg) {
      print "Needs key\n";
      help();
      exit 1;
    }

    $KEY = $firstArg;
    $KEY = uc($KEY);
    $KEY = $KEY =~ s/:.*//r;

    if (defined $a_print) {
      print `var $KEY`;
      exit 0;
    }

    my $value = `var $KEY`;
    chomp $value;
    if ($value eq "") {
      $value = -1;
    }
    my $newValue = $value + 1;
    `var "${KEY}:${newValue}"`;
    exit 0;
}

