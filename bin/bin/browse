#!/usr/bin/perl -w
# browse - Open up browser

use strict;

use Getopt::Long;

my $a_list;
my $a_first;
my $a_all;
my $a_dryRun;
my $a_grep;
my $a_help;

sub help() {
    print STDOUT <<'HELP';

browse - Open browser

USAGE:
  >> browse [port] [options]

Options:
  --list    (-l) See ports in use
  --first   (-f) Use first result
  --all     (-a) Open browser for all ports
  --dry-run (-d) Don't open browser
  --grep    (-g) Filter results
  --help    (-h) See this message

EXAMPLES:
  >> browse 8080        # Open localhost:8080
  >> browse "3000 3001" # Open multiple
  >> browse             # same as --list
  >> browse -g 80 -f    # Open first result

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

sub openBrowser($) {
    my ($port) = @_;
    if (!defined $a_dryRun) {
        `cmd.exe /C start http://localhost:$port 2>/dev/null`;
    }
}


MAIN: {
    GetOptions(
        'list' => \$a_list,
        'first' => \$a_first,
        'all' => \$a_all,
        'dry-run' => \$a_dryRun,
        'grep:s' => \$a_grep,
        'help' => \$a_help
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg=getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    if (! defined $a_grep) {
        $a_grep = '';
    }
    my $ports = `netstat -tulpn 2>/dev/null | grep LISTEN | grep ":::" | awk '{ print \$4 }' | sed 's/[^0-9]//g' | grep "$a_grep"`;

    if (!defined $a_all && !defined $a_first && !defined $firstArg || defined $a_list) {
        print $ports;
        exit 0;
    }

    my @first = split('\n', $ports);
    if (defined $a_first) {
        my $f = $first[0];
        if (defined $f) {
            chomp $f;
            openBrowser($f);
        } else {
            print "nothing to do\n";
        }
        exit 0;
    }

    if (defined $a_all) {
        my $f = $first[0];
        if (!defined $f) {
            print "nothing to do\n";
            exit 0;
        }
        foreach(@first) {
            chomp;
            openBrowser($_);
        }
        exit 0;
    }

    if (defined $firstArg) {
        my @args = split(' ', $firstArg);
        for my $port (@args) {
            print "browser opening at port $port...\n";
            openBrowser($port);
        }
    } else {
        print "nothing to do\n";
    }

    print "done\n";
    exit 0;
}

