#!/usr/bin/perl -w
# jira - open jira quickly in browser

use strict;

use Getopt::Long;

my $a_verbose;
my $a_dryRun;
my $a_help;

my $HOST = "rndjira.sas.com";
my $PORT = "80";

sub help() {
    print STDOUT <<'HELP';

jira - open jira quickly in browser

USAGE:
  >> jira [issue-id] [args]

Options:
  --verbose (-v) Print extra logging
  --dry-run (-d) Don't open browser
  --help    (-h) See this message

EXAMPLES:
  >> jira         # open first issue
  >> jira FOO-123 # open specific issue

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

MAIN: {
    GetOptions(
        'verbose' => \$a_verbose,
        'dry-run' => \$a_dryRun,
        'help' => \$a_help
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg=getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    my $URL = "https://$HOST/issues";
    if ($firstArg) {
        $URL = "https://$HOST/browse/$firstArg";
    }

    if ($a_verbose) {
        print "HOST: $HOST\n";
        print "PORT: $PORT\n";
        print "URL: $URL\n";
    }

    if ($a_dryRun) {
        exit 0;
    }

    `open-browser $URL`;

    exit 0;
}

