#!/usr/bin/perl -w
# jira - open jira quickly in browser

use strict;

use Getopt::Long;

my $a_verbose;
my $a_dryRun;
my $a_help;

my $HOST = "rndjira.sas.com";
my $PORT = "80";

sub help() {
    print STDOUT <<'HELP';

jira - open jira quickly in browser

USAGE:
  >> jira [issue-id] [args]

Options:
  --verbose (-v) Print extra logging
  --dry-run (-d) Don't open browser
  --help    (-h) See this message

EXAMPLES:
  >> jira         # open first issue
  >> jira FOO-123 # open specific issue

HELP
}

MAIN: {
    GetOptions(
        'verbose' => \$a_verbose,
        'dry-run' => \$a_dryRun,
        'help' => \$a_help
    ) || (help() && exit 1);

    if (defined $a_help) {
        help();
        exit 1;
    }

    if ($a_verbose) {
        print "HOST: $HOST\n";
        print "PORT: $PORT\n";
    }

    my @args = @ARGV;
    foreach my $arg (@args) {
        my $URL = "https://$HOST/issues";
        if ($arg) {
            $URL = "https://$HOST/browse/$arg";
        }
        if ($a_verbose) {
            print "URL: $URL\n";
        }
        if (!defined $a_dryRun) {
            `open-browser $URL`;
        }
    }

    exit 0;
}

