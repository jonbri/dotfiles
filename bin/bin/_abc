#!/bin/bash

count=`abc $@ --count`

hasFirstArg=false
for arg in "$@"; do
  if [ "$arg" == "-f" ] || [ "$arg" == "--first" ]; then
    hasFirstArg=true
    break
  fi
done

if [ $count -eq 0 ]; then
  echo 'no matches'
elif [ $count -eq 1 ] || [ $hasFirstArg == true ]; then
  eval "cd `abc $@`"
  persona --become --quiet
else
  results=`abc $@ --list`
  echo $results | tr ' ' '\n'
  eval "cd `abc --base $@`"
fi

