#!/usr/bin/perl -w

use strict;

use Getopt::Long;

my $a_all;
my $a_color;
my $a_reset;
my $a_inline;
my $a_help;

sub help() {
    print STDOUT <<'HELP';

colors

USAGE:
  >> colors <text> [options]

Options:
  --all    (-a) Show all colors
  --color  (-c) Color to show
  --reset  (-r) Reset back to white
  --inline (-i) No carriage-return
  --help   (-h) See this message

Colors:
  random
  red
  green
  yellow
  blue
  magenta
  cyan
  white
  black
  orange

EXAMPLES:
  >> colors
  >> colors red
  >> colors 100

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

MAIN: {
    GetOptions(
        'all' => \$a_all,
        'color=s' => \$a_color,
        'inline' => \$a_inline,
        'reset' => \$a_reset,
        'help' => \$a_help
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg = getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    my $escapeSequence = "\x1b[38;5;";

    my $text = $firstArg;
    if (!defined $firstArg) {
        $text = "colour";
    }

    if (defined $a_all) {
        for (my $i = 0; $i < 256; $i++) {
            printf "${escapeSequence}${i}m${text}${i}\n";
        }
        exit 0;
    }

    my $color = $a_color;
    if (!defined $color) {
        $color = int(rand(256));
    } elsif ($color eq "red") {
        $color = 1;
    } elsif ($color eq "green") {
        $color = 2;
    } elsif ($color eq "yellow") {
        $color = 3;
    } elsif ($color eq "blue") {
        $color = 4;
    } elsif ($color eq "magenta") {
        $color = 5;
    } elsif ($color eq "cyan") {
        $color = 6;
    } elsif ($color eq "white") {
        $color = 7;
    } elsif ($color eq "black") {
        $color = 8;
    } elsif ($color eq "orange") {
        $color = 9;
    }
    if ($color =~ /^\d+$/) {
        printf "${escapeSequence}${color}m${text}";
        if ($text eq "colour") {
            print "${color}";
        }
        if (!defined $a_inline) {
            printf "\n";
        }

    }

    if (defined $a_reset) {
        printf "${escapeSequence}7m";
    }

    exit 0;
}

