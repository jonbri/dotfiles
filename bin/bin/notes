#!/usr/bin/perl -w
# notes - take quick notes

use strict;

use Getopt::Long;

my $a_help;

sub help() {
    print STDOUT <<'HELP';

notes - take quick notes

USAGE:
  >> notes [options]

Options:
  --help    (-h) See this message

EXAMPLES:
  >> notes     # start taking notes
  >> notes foo # edit foo notes file

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

MAIN: {
    GetOptions(
        'help' => \$a_help,
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg=getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    my $WIN_HOME="/mnt/c/Users/jonbri";
    my $colorscheme = "blue";

    if (defined $firstArg) {
        system("nvim -c \"colorscheme $colorscheme | normal Gzz\" \"${WIN_HOME}/Desktop/save/_notes_$firstArg.txt\"");
        exit 0;
    }

    system("nvim -c \"colorscheme $colorscheme | normal Gzz\" \"${WIN_HOME}/Desktop/save/_notes.txt\"");

    exit 0;
}

