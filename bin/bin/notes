#!/usr/bin/perl -w
# notes - take quick notes

use strict;

use Getopt::Long;

my $a_list;
my $a_notepad;
my $a_write;
my $a_print;
my $a_color;
my $a_delete;
my $a_verbose;
my $a_help;

my $colorscheme = "blue";
my $WIN_HOME="/mnt/c/Users/jonbri";
my $SAVE_DIR="${WIN_HOME}/Desktop/save";

sub help() {
    print STDOUT <<'HELP';

notes - take quick notes

USAGE:
  >> notes [options]

Options:
  --list    (-l) List notes files
  --notepad (-n) Open in notepad
  --write   (-w) Save to desktop
  --print   (-p) Print to stdout
  --color   (-c) Vim color scheme
  --delete  (-d) Delete a note file
  --verbose (-v) Extra logging
  --help    (-h) See this message

EXAMPLES:
  >> notes        # start taking notes
  >> notes -w     # create copy of default notes file on desktop
  >> notes foo    # edit foo notes file
  >> notes -n     # edit default notes file in notepad
  >> notes foo -n # edit foo notes file in notepad

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

sub runCommand($) {
    my ($command) = @_;
    open CMD, "$command |" || die "Unable to run $command: $!";
    my @output = <CMD>;
    close CMD;
    return @output;
}

MAIN: {
    GetOptions(
        'list' => \$a_list,
        'notepad:s' => \$a_notepad,
        'write' => \$a_write,
        'print' => \$a_print,
        'color:s' => \$a_color,
        'delete' => \$a_delete,
        'verbose' => \$a_verbose,
        'help' => \$a_help,
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg=getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    if (defined $a_list) {
        my $lsCommand = "ls ${SAVE_DIR} | grep _notes";
        if (defined $firstArg) {
            $lsCommand .= " | grep $firstArg";
        }
        $lsCommand .= " | sed -e 's/_notes_//g'"; # remove _notes_
        $lsCommand .= " | sed -e 's/^[_]*//g'"; # remove leading _
        $lsCommand .= " | sed -e 's/.txt\$//g'"; # remove .txt
        print runCommand($lsCommand);
        exit 0;
    }

    my $path = "${SAVE_DIR}/_notes.txt";
    if (defined $firstArg) {
        $path = "${SAVE_DIR}/_notes_$firstArg.txt";
    }

    if (defined $a_notepad) {
        `notepad.exe ${path}`;
        exit 0;
    }

    if (defined $a_print) {
        if (defined $firstArg && ! -e $path) {
            print "Notes file does not exist\n";
            exit 1;
        }

        print `cat ${path}`;
        print "\n";
        exit 0;
    }

    if (defined $a_write) {
        if (defined $firstArg && ! -e $path) {
            print "Notes file does not exist\n";
            exit 1;
        }

        `cp ${path} ${WIN_HOME}/Desktop`;
        exit 0;
    }

    if (defined $a_delete) {
        if (defined $firstArg && ! -e $path) {
            print "Notes file does not exist\n";
            exit 1;
        }

        # first make backup
        my $backupDir = "${WIN_HOME}/Desktop/save/znotes_backup_${firstArg}.txt";
        `cp ${path} ${backupDir}`;
        if (defined $a_verbose) {
            print "Backup saved to ${backupDir}\n";
        }
        if (defined $a_verbose) {
            print "Removing ${path}...\n";
        }
        `rm ${path}`;
        if (defined $a_verbose) {
            print "Removed\n";
        }
        exit 0;
    }

    if (defined $a_color) {
        $colorscheme = $a_color;
    }
    system("nvim -c \"colorscheme $colorscheme | normal Gzz\" \"${path}\"");
    exit 0;
}

