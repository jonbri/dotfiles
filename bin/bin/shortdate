#!/usr/bin/perl -w

use strict;

use Getopt::Long;

my $a_date;
my $a_time;
my $a_separator;
my $a_verbose;
my $a_help;

sub help() {
    print STDERR <<'HELP';

shortdate

USAGE:
  >> shortdate

Options:
  --date      (-d) Show date
  --time      (-t) Show time
  --separator (-s) Character between date and time
  --verbose   (-v) Show details
  --help      (-h) Show this message

EXAMPLES:
  >> shortdate
  >> shortdate "2015-01-01 12:34:56"

HELP
}

sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}


MAIN: {
    GetOptions(
        'date' => \$a_date,
        'time' => \$a_time,
        'separator=s' => \$a_separator,
        'verbose' => \$a_verbose,
        'help' => \$a_help
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg = getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    my $dateCommand = "date ";
    if (defined $firstArg) {
        $dateCommand .= "--date \"${firstArg}\" ";
    }

    my $separator = " ";
    if (defined $a_separator) {
        $separator = $a_separator;
    }

    my $dateFormat = "%Y-%m-%d";
    my $timeFormat = "%I:%M:%S";
    my $formatString = "${dateFormat}${separator}${timeFormat}";
    if (defined $a_date || defined $a_time) {
        $formatString = "";
        if (defined $a_date) {
            $formatString .= "${dateFormat}${separator}";
        }
        if (defined $a_time) {
            $formatString .= $timeFormat;
        }
        $formatString =~ s/${separator}$//;
        $formatString =~ s/-$//;
    }

    $dateCommand .= "'+${formatString}'";

    if (defined $a_verbose) {
        print "$dateCommand\n";
    }

    my $output = `${dateCommand}`;
    chomp $output;
    print "$output\n";

    exit 0;
}

