sub getFirstNonOptionArg {
    my $arg = shift @ARGV;
    if (!defined $arg) {
        return;
    }
    return ($arg =~ /^-/) ? getFirstNonOptionArg() : $arg;
}

MAIN: {
    GetOptions(
        'width:i' => \$a_width,
        'reverse' => \$a_reverse,
        'numbers' => \$a_numbers,
        'integer' => \$a_integer,
        'help' => \$a_help
    ) || (help() && exit 1);

    # show help if either arg or option is given
    my $firstArg=getFirstNonOptionArg();
    if (($firstArg && $firstArg eq "help") || defined $a_help) {
        help();
        exit 1;
    }

    my $times = $firstArg;
    # no args
    if (!defined $firstArg) {
        $times = 1;
    }

    my @content = ();
    for my $i (0 .. $times) {
        if ($i == $times) {
            last;
        }

        my $t;
        if (defined $a_integer) {
            $t = $numbers[$i % scalar(@numbers)];
        } else {
            $t = $text[$i % scalar(@text)];
        }

        if ($a_width && $a_width >= 0) {
            $t = substr($t, 0, $a_width);
        }
        if (defined $a_numbers) {
            push(@content, "$i. $t\n");
        } else {
            push(@content, "$t\n");
        }
    }

    if ($a_reverse) {
        @content = reverse @content;
    }
    foreach(@content) {
        print $_;
    }

    exit 0;
}

