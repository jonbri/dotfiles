#!/usr/bin/perl -w

use strict;

use Getopt::Long;

STDOUT->autoflush(1);

my $a_poll;
my $a_json;
my $a_help;

my $DELIMITER = "%";
my $longest = 0;
my $count = 0;

sub help() {
    print STDOUT <<'HELP';

version-remote - see NPM package versions

USAGE:
  >> version-remote [args]

Options:
  --poll   (-p) Poll NPM repository
  --json   (-j) Pass --json to yarn command

EXAMPLES:
  >> version-remote react # see all versions
  >> version-remote react lodash serve --poll
  >> version-remote . # use cwd for package

HELP
}

sub clearScreen {
    print "\033[2J";
    print "\033[0;0H";
}

sub printPollResults {
    my $arg = shift @_;
    my @result = split($DELIMITER, $arg);
    my $package = $result[0];
    my $version = $result[1];
    if (! defined $version) {
        $version = "not found";
    } else {
        $version = "v${version}";
    }

    my $tagsCommand = "npm dist-tags $package 2> /dev/null";
    my $tagsOutput = `$tagsCommand`;
    chomp $tagsOutput;
    my @tags = split(/\n/, $tagsOutput);

    printf "%-${longest}s: %s", $package, $version;
    foreach my $tag (@tags) {
        print "\n";
        printf "%-${longest}s  %s", " ", $tag;
    }
    print "\n\n";
}

MAIN: {
    GetOptions(
        'poll:s' => \$a_poll,
        'json' => \$a_json,
        'help' => \$a_help
    ) || (help() && exit 1);

    # show help if either arg or option is given
    if (defined $a_help) {
        help();
        exit 1;
    }

    my @args = @ARGV;

    if (! @args) {
        print "Error: Argument required\n";
        help();
        exit 1;
    }

    if (defined $a_poll) {
        print "starting...\n";
    }

    my $json = "";
    if (defined $a_json) {
        $json = "--json";
    }

    if (!defined $a_poll) {
        foreach my $arg (@args) {
            my $package = $arg;
            chomp $package;
            my $versionCommand = "npm view $package versions $json 2> /dev/null";
            my $output = `$versionCommand`;
            chomp $output;
            # if @args has length of 1, don't print the package name
            if (@args > 1) {
                print "${package}\n${output}\n";
            } else {
                print "${output}\n";
            }
            my $tagsCommand = "npm dist-tags $package 2> /dev/null";
            my $tagsOutput = `$tagsCommand`;
            chomp $tagsOutput;
            print "${tagsOutput}\n";

            if ($arg ne $args[-1]) {
                print "\n";
            }
        }
        exit 0;
    }

    do {
        my @results = ();
        foreach my $arg (@args) {
            my $package = $arg;
            my $packageNameLength = length $package;
            if ($packageNameLength > $longest) {
                $longest = $packageNameLength;
            }
            my $output = `npm view $package versions --json 2> /dev/null | tac | nth 1`;
            if ($output ne "") {
                $output =~ s/^\s+|\s+$//g;
                $output = substr $output, 1, -1;
                chomp $output;
                push(@results, "${package}${DELIMITER}${output}");
            } else {
                my $output = `npm view $package versions --json 2> /dev/null`;
                chomp $output;
                $output =~ s/\"//g;
                push(@results, "${package}${DELIMITER}${output}");
            }
        }

        if (! defined $a_poll) {
            exit 0;
        }

        clearScreen();
        my $sd = `shortdate`;
        chomp $sd;
        print "$sd ($count)\n\n";
        $count = $count + 1;
        foreach(@results) {
            printPollResults($_);
        }

        my $pollInterval = 1;
        if ($a_poll =~ /^[0-9]+$/) {
            $pollInterval = $a_poll;
        }

        print "\npolling in $pollInterval seconds...";
        sleep $pollInterval;
    } while (1);

    exit 0;
}

